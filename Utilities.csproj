<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Description>A library of utilities for .NET Core and PowerShell Core</Description>
    <PackageProjectUrl>https://github.com/ChessGeekBoy/Utilities</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/ChessGeekBoy/Utilities</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Utilities; PowerShell;</PackageTags>
    <PackageReleaseNotes>This is the first release of Utilities! We hope to add more features to it in future updates. If you would like to request a feature, create an issue in our GitHub repository</PackageReleaseNotes>
    <PackageLicenseFile>https://www.github.com/ChessGeekBoy/Utilities/blob/main/LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="art\" />
    <Folder Include="Files\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
